<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/layout_full"
        android:id="@+id/mainview"
        android:orientation="vertical">
        
<!-- ***************logo bar************************************* -->
        <RelativeLayout 
                style="@style/layout_vertical"
                android:id="@+id/view_top"
                android:layout_weight="3"
                android:background="#ffffff"
                android:orientation="horizontal">
               
                <ImageView 
                    android:id="@+id/app_logo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/app_logo"
                    android:layout_marginRight="5dip"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:textColor="#080808"
                    android:text="地铁听新闻"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/app_logo"
                    android:layout_marginLeft="5dip"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:textColor="#080808"
                    android:text="早间播报"/>			                
        </RelativeLayout> 
        
        <LinearLayout
            android:layout_weight="26.7"
            style="@style/layout_vertical"
            >
                
          <!-- ***************include*************************************** -->

        <net.jianweixu.listennews.FlingGalleryView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrolllayoutID"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/first"
            layout="@layout/first_page"/>
        
        <include
            android:id="@+id/second"
            layout="@layout/second_page"/>
        
        <include
            android:id="@+id/third"
            layout="@layout/third_page"/>
        
        </net.jianweixu.listennews.FlingGalleryView>
          
          
        <!-- ***************include******************************************** -->               


        </LinearLayout>
<!-- ****************scroll bar******************* -->
        <RelativeLayout 
                style="@style/layout_vertical"
                android:layout_weight="2"
                android:background="#e5e5e5"
                android:orientation="horizontal">
                <ImageView 
               
                    android:id="@+id/playbarcenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/playbarno"/>
                <ImageView 
                    android:id="@+id/playbarleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/playbarcenter"
                    android:layout_marginRight="15dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/playbaryes"/>
                <ImageView 
                    android:id="@+id/playbarright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/playbarcenter"
                    android:layout_marginLeft="15dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/playbarno"/>
        </RelativeLayout>               
<!-- *************progress bar ************* -->
        <LinearLayout 
                style="@style/layout_vertical"
                android:id="@+id/view_bottom"
                android:layout_weight="3.5"
                android:background="#37474f"
                android:orientation="horizontal">
                <LinearLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="1"
                    android:background="#37474f">                
                </LinearLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="7"
                    android:background="#37474f">
                	<ProgressBar 
                    	style="?android:attr/progressBarStyleHorizontal"
                    	android:id="@+id/progress_bar"
                    	android:layout_width="fill_parent"
                    	android:layout_height="5dip"
                    	android:layout_marginTop="19dip"
                   	 	android:layout_centerHorizontal="true"/>
                	<TextView 
                	    android:id="@+id/total_duration"
                	    android:layout_width="wrap_content"
                	    android:layout_height="wrap_content"
                	    android:layout_alignParentLeft="true"
                	    android:paddingTop="6dip"
                	    android:layout_below="@id/progress_bar"
                	    android:text="00:00"/>
                	<TextView 
                	    android:id="@+id/left_duration"
                	    android:layout_width="wrap_content"
                	    android:layout_height="wrap_content"
                	    android:layout_alignParentRight="true"
                	    android:paddingTop="6dip"
                	    android:layout_below="@id/progress_bar"              	    
                	    android:text="00:00"/>
                </RelativeLayout>
                <LinearLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="1"
                    android:background="#37474f">                
                </LinearLayout>
        </LinearLayout>
        
<!-- *********************control bar********************************* -->
        <LinearLayout 
                style="@style/layout_vertical"
                android:layout_weight="4"
                android:background="#37474f"
                android:orientation="horizontal">
                <LinearLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="0.45"
                    android:background="#37474f">                
                </LinearLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="3"
                    android:background="#37474f">
                	<!--  
                    <ImageButton 
                        android:src="@drawable/magicsound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#00ffffff"/>   
                        -->             
                </RelativeLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="3"
                    android:background="#37474f">
                    <ImageButton 
                        android:id="@+id/backward_button"
                        android:src="@drawable/back"
                        android:background="#00ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>                
                </RelativeLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="3"
                    android:background="#37474f">
                    <ImageButton 
                        android:id="@+id/play_button"
                        android:background="#00ffffff"
                        android:src="@drawable/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>                 
                </RelativeLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="3"
                    android:background="#37474f">
                    <ImageButton
                        android:id="@+id/forward_button" 
                        android:src="@drawable/forward"
                        android:background="#00ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>                 
                </RelativeLayout>
                <RelativeLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="3"
                    android:background="#37474f">   
                    <!--  
                    <ImageButton
                        android:id="@+id/share_button"
                        android:src="@drawable/share"
                        android:background="#00ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>  
                                    -->
                </RelativeLayout>
                <LinearLayout 
                    style="@style/layout_horizontal"
                    android:layout_weight="0.45"
                    android:background="#37474f">                
                </LinearLayout>
        </LinearLayout>
        
          
        
                
        
</LinearLayout>
